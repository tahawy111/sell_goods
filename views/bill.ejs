<!DOCTYPE html>
<html lang="en" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bill.css" />
    <link rel="stylesheet" href="/css/cairo.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <title>فاتورة مبيعات</title>
  </head>
  <body>
    <div class="container mt-5">
      <div class="d-flex justify-content-center row">
        <div class="col-md-8">
          <div class="p-3 bg-white rounded">
            <div class="d-flex justify-content-between">
              <div class="col-md-6">
                <h1>فاتورة</h1>
                <div class="billed">
                  <span class="font-weight-bold text-uppercase"
                    >تمت بواسطة:</span
                  >
                  <span class="ml-1"><%= data.adminName %></span>
                </div>
                <div class="billed">
                  <span class="font-weight-bold text-uppercase">التاريخ:</span
                  ><span class="ml-1"
                    ><%= data.createdAt.toLocaleDateString('ar-EG') %></span
                  >
                </div>
                <div class="billed w-100">
                  <span class="font-weight-bold text-uppercase"
                    >رقم الفاتورة:
                  </span>
                  <span class="ml-1"><%= data.billNumber %></span>
                </div>
                <% if (data.userDealer) { %>
                <h5 class="mt-3" style="line-height: 0.2">
                  بيانات العميل
                  <hr />
                </h5>

                <div class="billed">
                  <span class="font-weight-bold text-uppercase"
                    >اسم العميل:</span
                  >
                  <span class="ml-1"><%= data.userDealer.dealerName %></span>
                </div>
                <div class="billed">
                  <span class="font-weight-bold text-uppercase"
                    >عنوان العميل:</span
                  >
                  <span class="ml-1"><%= data.userDealer.address %></span>
                </div>

                <div class="billed">
                  <span class="font-weight-bold text-uppercase"
                    >اسم الشركة:</span
                  >
                  <span class="ml-1"
                    ><%= data.userDealer.companyName ?
                    data.userDealer.companyName : "لايوجد" %></span
                  >
                </div>

                <div class="billed">
                  <span class="font-weight-bold text-uppercase"
                    >رقم الهاتف:</span
                  >
                  <span class="ml-1"><%= data.userDealer.phoneNumber %></span>
                </div>

                <div class="billed mb-5">
                  <span class="font-weight-bold text-uppercase"
                    >رقم الهاتف الارضي:</span
                  >
                  <span class="ml-1"
                    ><%= data.userDealer.telephoneFix ?
                    data.userDealer.telephoneFix : "لايوجد" %></span
                  >
                </div>
                <% } %>
              </div>
              <div class="text-center brand mt-5">
                <img src="/project_files/imgs/Elfath-Logo.png" />
                <div class="fs-2 title">الفتح ستور</div>

                <div class="fs-5">01063310981, 01117419902, 01145681652</div>
              </div>
            </div>
            <div style="transform: translateY(-46px)" class=".ttable">
              <div class="table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>المنتج</th>
                      <th>سعر القطعة</th>
                      <th>العدد</th>
                      <th>السعر الاجمالي</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.selectedProduct.forEach((ele,index)=>{ %>
                    <tr>
                      <td><%= ele.name %></td>
                      <td><%= ele.priceOfOne %></td>
                      <td><%= ele.quantity %></td>
                      <td><%= ele.price %></td>
                    </tr>
                    <% }) %>
                    <td></td>
                    <td>العدد الاجمالي: <%= data.totalQuantity %></td>
                    <td></td>
                    <td>
                      <%= data.totalPrice %>
                      <span class="fw-bold"> :السعر الاجمالي</span>
                    </td>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
