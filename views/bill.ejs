<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- fontawesome -->
    <link rel="stylesheet" href="/css/all.min.css" />
    <link rel="stylesheet" href="/css/bill.css" />
    <link rel="stylesheet" href="/css/cairo.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <title>Bill</title>
  </head>
  <body>
    <div class="container mt-5">
      <div class="d-flex justify-content-center row">
        <div class="col-md-8">
          <div class="p-3 bg-white rounded">
            <div class="d-flex justify-content-between">
              <div class="col-md-6">
                <h1>فاتورة</h1>
                <div class="billed">
                  <span class="ml-1"><%= data.adminName %></span>
                  <span class="font-weight-bold text-uppercase"
                    >:تمت بواسطة</span
                  >
                </div>
                <div class="billed">
                  <span class="font-weight-bold text-uppercase">التاريخ:</span
                  ><span class="ml-1"
                    ><%= data.createdAt.toLocaleDateString('ar-EG') %></span
                  >
                </div>
                <div class="billed w-100">
                  <span class="font-weight-bold text-uppercase"
                    >رقم الفاتورة:
                  </span>
                  <span class="ml-1"><%= data.billNumber %></span>
                </div>
              </div>
              <div class="text-center brand mt-3">
                <img src="/project_files/imgs/Elfath-Logo.png" />
                <div class="fs-2 title">الفتح ستور</div>
              </div>
            </div>
            <div style="transform: translateY(-46px)" class=".ttable">
              <div class="table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>المنتج</th>
                      <th>سعر القطعة</th>
                      <th>العدد</th>
                      <th>السعر الاجمالي</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.selectedProduct.forEach((ele,index)=>{ %>
                    <tr>
                      <td><%= ele.name %></td>
                      <td><%= ele.priceOfOne %></td>
                      <td><%= ele.quantity %></td>
                      <td><%= ele.price %></td>
                    </tr>
                    <% }) %>
                    <td></td>
                    <td>العدد الاجمالي: <%= data.totalQuantity %></td>
                    <td></td>
                    <td>
                      <%= data.totalPrice %>
                      <span class="fw-bold"> :السعر الاجمالي</span>
                    </td>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- fontawesome -->
    <script src="/js/all.min.js"></script>
  </body>
</html>
