<%- include('./partials/head.ejs') %>

<div class="row w-100">
  <div class="col-lg-6 mx-auto mt-4">
    <div class="card shadow">
      <div class="card-header bg-primary">
        <h3 class="text-light">Edit Product (<%= data.name %>)</h3>
      </div>
      <div class="card-body p-4">
        <form
          action="/update/<%= data._id %>"
          method="post"
          id="edit-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="fs-5" for="name">Name</label>
            <input
              type="text"
              name="name"
              value="<%= data.name %>"
              class="form-control form-control-lg"
              placeholder="Enter Name"
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="price">Price</label>
            <input
              type="number"
              name="price"
              value="<%= data.price %>"
              class="form-control form-control-lg"
              placeholder="Enter Price"
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="dellerPrice">السعر الديلر</label>
            <input
              type="number"
              name="dellerPrice"
              class="form-control form-control-lg"
              placeholder="ادخل السعر الديلر"
            />
          </div>

          <div class="mb-3">
            <label class="fs-5" for="quantity">Quantity</label>
            <input
              type="number"
              name="quantity"
              value="<%= data.quantity %>"
              class="form-control form-control-lg"
              placeholder="Enter Quantity"
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="barcode">Barcode</label>
            <input
              type="text"
              name="barcode"
              value="<%= data.barcode %>"
              class="form-control form-control-lg"
              placeholder="Enter Barcode"
            />
          </div>

          <div class="mb-3">
            <label class="fs-5" for="category" value="">الفئة</label>
            <select name="category" class="form-control form-control-lg">
              <% category.forEach((ele) => { %>
              <option value="<%= ele.category %>"><%= ele.category %></option>

              <% }) %>
            </select>
          </div>

          <div class="mb-3">
            <label for="image" class="fs-5" class="form-label"
              >Select Image</label
            >
            <input
              type="file"
              name="image"
              class="form-control form-control-lg"
            />
            <input type="hidden" name="old_image" value="<%= data.image %>" />
          </div>
          <div class="d-flex flex-column">
            <img
              src="/uploads/images/<%= data.image %>"
              class="img-thumbnail"
              id="old_image"
            />
            <input
              type="submit"
              name="submit"
              value="Update"
              class="btn btn-primary btn-lg"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
