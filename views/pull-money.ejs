<%- include('./partials/head.ejs') %>

<div class="row w-100">
  <div class="col-lg-6 mx-auto mt-4">
    <div class="card shadow">
      <div class="card-header bg-primary">
        <h3 class="text-light">اضافة عملية سحب فلوس</h3>
      </div>
      <div class="card-body p-4">
        <form
          action="/pull-Money"
          method="post"
          id="add-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="fs-5" for="name">الاسم</label>
            <input
              type="text"
              name="name"
              class="form-control form-control-lg"
              placeholder="ادخل اسم الشخص الذي سحب الفلوس"
              required
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="amount">المبلغ</label>
            <input
              type="number"
              name="amount"
              class="form-control form-control-lg"
              placeholder="ادخل المبلغ المسحوب"
              required
            />
          </div>

          <div class="form-floating mb-3">
            <textarea
              class="form-control"
              placeholder="ليه"
              name="why"
              id="floatingTextarea2"
              style="height: 100px"
            ></textarea>
            <label for="floatingTextarea2">سبب السحب</label>
          </div>

          <div class="mb-3">
            <label for="file" class="fs-5" class="form-label">اختر ملف</label>
            <input
              type="file"
              name="file"
              class="form-control form-control-lg"
            />
          </div>

          <input
            type="submit"
            value="اضافة عملية سحب فلوس"
            class="btn btn-primary btn-lg"
          />
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
