<%- include('./partials/head.ejs') %>

<div class="row">
  <div class="col-lg-6 mx-auto mt-4">
    <div class="card shadow">
      <div class="card-header bg-success">
        <h3 class="text-light">Search</h3>
      </div>
      <div class="card-body p-4">
        <form method="get" action="/full_search_result">
          <div class="mb-3">
            <label class="fs-5" for="name">Name</label>
            <input
              type="text"
              name="name"
              class="form-control form-control-lg"
              placeholder="Enter Name"
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="name">Price</label>
            <input
              type="number"
              name="price"
              class="form-control form-control-lg"
              placeholder="Enter Price"
            />
          </div>

          <div class="mb-3">
            <label class="fs-5" for="quantity">Quantity</label>
            <input
              type="number"
              name="quantity"
              class="form-control form-control-lg"
              placeholder="Enter Quantity"
            />
          </div>

          <input
            type="submit"
            value="Search"
            class="btn btn-outline-success btn-lg"
          />
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
