<%- include('./partials/head.ejs') %>


<div class="container-fluid">
  <div class="row my-4">
    <div class="col-lg-12">
      <div class="table-responsive">
        <table class="table table-striped text-center my-3 table-data">
          <thead>
            <tr class="table-dark">
              <th>#</th>
              <th>الاسم</th>
              <th>السعر</th>
              <th>الكمية</th>
              <th>الصورة</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody style="vertical-align: middle">
            <% data.forEach((ele,index)=>{ %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= ele.name %></td>
              <td><%= ele.price %></td>
              <td><%= ele.quantity %></td>
              <td><%= ele.barcode %></td>
              <td>
                <% if(ele.image !== "No Data"){ %>
                  <img
                    width="50"
                    class="img-thumbnail"
                    src="/uploads/images/<%= ele.image %>"
                  />
                  <% }else{ %> لا توجد صورة <% } %>
              </td>

                <td><a href="/details/<%= ele._id %>" class="btn btn-primary">اكثر</a></td>
                <td>
                  <a
                  class="btn btn-success"
                  href="/cart/<%= ele._id %>/<%= ele.name %>/<%= ele.price %>/<%= ele.quantity %>"
                  >بيع</a
                ></td>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>




<script>
  let code = "";
  let reading = false;
  const barcodeHandleSell = document.querySelector(".barcode-handle-sell");
  document.addEventListener("keypress", (e) => {
    //usually scanners throw an 'Enter' key at the end of read
    if (e.keyCode === 13) {
      if (code.length > 10) {
        console.log(code);
        /// code ready to use
        code = "";
      }
    } else {
      code += e.key; //while this is not an 'enter' it stores the every key
      barcodeHandleSell.href = `/cart/${code}`;
      barcodeHandleSell.click();
    }

    //run a timeout of 200ms at the first read and clear everything
    if (!reading) {
      reading = true;
      setTimeout(() => {
        code = "";
        reading = false;
      }, 200); //200 works fine for me but you can adjust it
    }
  });
</script>


