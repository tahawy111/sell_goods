<%- include('./partials/head.ejs') %>

<div class="row w-100">
  <div class="col-lg-6 mx-auto mt-4">
    <div class="card shadow">
      <div class="card-header bg-primary">
        <h3 class="text-light">انشاء فئة</h3>
      </div>
      <div class="card-body p-4">
        <form action="/create-category" method="post" id="create-category">
          <div class="mb-3">
            <label class="fs-5" for="category">ادخل اسم الفئة</label>
            <input
              type="text"
              name="category"
              class="form-control form-control-lg"
              placeholder="ادخل الفئة"
              required
            />
          </div>

          <input
            type="submit"
            name="submit"
            value="انشاء"
            class="btn btn-primary btn-lg"
          />
        </form>
      </div>
    </div>
  </div>
</div>

