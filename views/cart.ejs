<%- include('./partials/head.ejs') %>

<div class="container-fluid">
  <% if(items.length === 0){ %>
  <p class="alert alert-danger">There is no items</p>
  <% }else{ %>
  <div class="row my-4">
    <div class="col-lg-12">
      <div class="table-responsive me-5">
        <table class="table table-striped text-center my-3">
          <thead>
            <tr class="table-dark">
              <th>#</th>
              <th>Name</th>
              <th>price</th>
              <th>Amount</th>
              <th>Total</th>
              <th></th>
            </tr>
          </thead>

          <tbody style="vertical-align: middle">
            <% items.forEach((ele,index)=>{ %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= ele.name %></td>
              <td><%= ele.price %></td>
              <td><%= ele.amount %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% } %>
</div>

<%- include('./partials/footer.ejs') %>
