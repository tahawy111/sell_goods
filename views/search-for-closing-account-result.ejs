<%- include('./partials/head.ejs') %>

<div class="container-fluid">
  <h2>الايراد: <%= totalAmount %></h2>
  <div class="row my-4">
    <div class="col-lg-12">
      <div class="table-responsive">
        <table
          class="table table-striped table-bordered text-center my-3 table-data"
        >
          <thead>
            <tr class="table-dark">
              <th>#</th>
              <th>التاريخ</th>
              <th>اليوم</th>
              <th>المبلغ القديم</th>
              <th>المسحوبات</th>
              <th>المبلغ المضاف</th>
              <th>فواتير اليوم</th>
              <th>المجموع الكلي</th>
              <th>المحل</th>
              <th></th>
            </tr>
          </thead>

          <tbody style="vertical-align: middle">
            <% data.forEach((ele,index)=>{ %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= ele.createdAt.toISOString() %></td>
              <td><%= ele.weekDay %></td>
              <td><%= ele.oldAmount %></td>
              <td><%= ele.totalPull %></td>
              <td><%= ele.addedMoney %></td>
              <td><%= ele.totalBill %></td>
              <td><%= ele.totalAmount %></td>
              <td><%= ele.shop %></td>
              <td>
                <a
                  class="btn btn-primary"
                  href="/edit-daily-account/<%= ele._id %>"
                  >تعديل</a
                >
                <a
                  class="btn btn-danger del"
                  href="delete-daily-account/<%= ele._id %>"
                  >حذف</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  // to make a confirm to all btns
  let del = document.querySelectorAll(".del");
  // get array from buttons
  const delBtns = Array.from(del);
  delBtns.forEach((e) => {
    e.addEventListener("click", (el) => {
      if (confirm("هل تريد الحذف")) {
      } else {
        el.preventDefault();
      }
    });
  });
</script>

