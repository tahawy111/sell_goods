<%- include('./partials/head.ejs') %>

<form
  class="d-flex justify-content-center my-3"
  method="get"
  action="/bills-list/bill-search-result"
>
  <input
    class="form-control me-2 w-25"
    type="search"
    name="search"
    placeholder="البحث برقم الفاتورة"
    aria-label="Search"
  />
  <button class="btn btn-outline-success" type="submit">Search</button>
</form>
<div class="container-fluid">
  <div class="row my-4">
    <div class="col-lg-12">
      <div class="table-responsive">
        <table class="table table-striped text-center my-3 table-data">
          <thead>
            <tr class="table-dark">
              <th>#</th>
              <th>طباعة</th>
              <th>التاريخ</th>
              <th>السعر الاجمالي</th>
              <th>الكمية</th>
              <th>رقم الفاتورة</th>
              <th>تمت بواسطة</th>
            </tr>
          </thead>

          <tbody style="vertical-align: middle">
            <% data.forEach((ele,index)=>{ %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <a
                  class="btn btn-primary"
                  target="_blank"
                  href="/bills-list/print/<%= ele._id %>"
                  >طباعة</a
                >
              </td>
              <td><%= ele.createdAt.toISOString() %></td>
              <td><%= ele.totalPrice %></td>
              <td><%= ele.totalQuantity %></td>
              <td><%= ele.billNumber %></td>
              <td><%= ele.adminUsername %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
