<%- include('./partials/head.ejs') %>

<div class="row w-100">
  <div class="col-lg-6 mx-auto mt-4">
    <div class="card shadow">
      <div class="card-header bg-primary">
        <h3 class="text-light">اضافة عميل ديلر جديد</h3>
      </div>
      <div class="card-body p-4">
        <form action="/add-user-dealer" method="post" id="add-user-dealer">
          <div class="mb-3">
            <label class="fs-5" for="name">الاسم</label>
            <input
              type="text"
              name="name"
              class="form-control form-control-lg"
              placeholder="ادخل اسم العميل"
              required
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="address">العنوان</label>
            <input
              type="text"
              name="address"
              class="form-control form-control-lg"
              placeholder="ادخل العنوان"
              required
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="companyName">اسم الشركة</label>
            <input
              type="text"
              name="companyName"
              class="form-control form-control-lg"
              placeholder="ادخل اسم الشركة"
              required
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="phoneNumber">رقم الهاتف</label>
            <input
              type="number"
              name="phoneNumber"
              class="form-control form-control-lg"
              placeholder="ادخل رقم الهاتف المحمول"
              required
            />
          </div>
          <div class="mb-3">
            <label class="fs-5" for="telephoneFix">رقم الهاتف الارضي</label>
            <input
              type="number"
              name="telephoneFix"
              class="form-control form-control-lg"
              placeholder="ادخل رقم الهاتف الارضي"
            />
          </div>

          <input
            type="submit"
            value="اضافة عميل"
            class="btn btn-primary btn-lg"
          />
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
