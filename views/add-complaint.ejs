<%- include('./partials/head.ejs') %>

<div class="row w-100">
  <div class="col-lg-6 mx-auto mt-4">
    <div class="card shadow">
      <div class="card-header bg-primary">
        <h3 class="text-light">اضافة شكوي</h3>
      </div>
      <div class="card-body p-4">
        <form action="/add-complaint" method="post" id="add-complaint">
          <div class="mb-3">
            <label class="fs-5" for="name">الاسم الشاكي</label>
            <input
              type="text"
              name="name"
              class="form-control form-control-lg"
              placeholder="ادخل الاسم الشاكي"
              required
            />
          </div>

          <div class="mb-3">
            <label class="fs-5" for="number">رقم الشاكي</label>
            <input
              type="text"
              name="number"
              class="form-control form-control-lg"
              placeholder="ادخل رقم الشاكي"
            />
          </div>

          <div class="form-floating mb-3">
            <textarea
              class="form-control"
              placeholder="اترك محتوي الشكوي هنا"
              name="complaintContent"
              id="floatingTextarea2"
              style="height: 100px"
            >
<%= typeof comment != 'undefined' ? comment : '' %></textarea
            >
            <label for="floatingTextarea2">محتوي الشكوي</label>
          </div>

          <input
            type="submit"
            value="اضافة شكوي"
            class="btn btn-primary btn-lg"
          />
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
